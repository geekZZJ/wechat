/* components/search/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.header {
  background-color: #ffffff;
  position: fixed;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  width: 750rpx;
  align-items: center;
  z-index: 99;
}

.search-container {
  display: inline-flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50px;
  margin-left: 20rpx;
}

.in-bar {
  color: #999;
}

.bar {
  display: inline-block;
  height: 68rpx;
  width: 100rpx;
  font-size: 28rpx;
}

.icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 24rpx;
  margin-right: 16rpx;
}

.cancel {
  width: 120rpx;
  text-align: center;
  display: inline-block;
}

.cancel-img {
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}