/* pages/hot/hot.wxss */
swiper image{
    width: 100%;
    height: 500rpx;
}

.hot-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    padding-bottom: 8px;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
}

.hot-title{
    font-size: 30rpx;
    color: #333;
    font-weight: 600;
    margin-left: 10px;
}

.hot-abstract{
    font-size: 20rpx;
    color: #666;
    margin: 5px 10px 5px 10px;
}

.hot-other{
    margin: 0 10px 0 10px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.heat{
    color: red;
    font-size: 20rpx;
    border: 1px solid #666;
    padding: 3rpx;
    border-radius: 4px;
}

/*icon样式*/
@font-face {
    font-family: 'iconfont';
    src: url(data:font/truetype;charset=utf-8;base64,) format('truetype');
    font-weight: normal;
    font-style: normal;
}

.iconfont {
    font-family: "iconfont" !important;
    font-size: 16px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.iconpinglun:before {
    content: "\e63a";
}

.iconbuoumaotubiao44:before {
    content: "\e630";
}

.hot-like{
    color: #666;
}

.hot-collection{
    font-size: 24rpx;
    margin-right: 40rpx;
}

.hot-comments{
    font-size: 22rpx;
    margin-right: 10rpx;
}