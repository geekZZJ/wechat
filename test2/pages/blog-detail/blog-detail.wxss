/* pages/blog-detail/blog-detail.wxss */
@import "../template/blog-bottom/blog-bottom-template.wxss"
@import "../template/blog-comment/blog-comment-template.wxss"
.container{
    display: flex;
    flex-direction: column;
    margin-bottom: 70rpx;
}

.title-container{
    margin-top: 30rpx;
    margin-left: 40rpx;
}

.title{
    font-size: 36rpx;
    font-weight: 700;
    color: #4b556c;
}

.author{
    display: flex;
    flex-direction: row;
    margin: 20rpx 30rpx 0 30rpx;
    justify-content: space-between;
    align-items: flex-start;
}

.author-left{
    display: flex;
    align-items: flex-start;
}

.author-right{
    height: 64rpx;
    line-height: 64rpx;
    font-size: 22rpx;
    color: red;
    text-align: center;
}

.look-author{
    height: 36rpx;
    border: 1px solid red;
    border-radius: 3px;
    padding: 2px 9px;
}

.looked-author{
    height: 36rpx;
    border: 1px solid #999;
    border-radius: 3px;
    padding: 2px 9px;
    color: #999;
}

.avatar{
    height: 64rpx;
    width: 64rpx;
}

.author-name{
    font-size: 30rpx;
    font-weight: 300;
    margin-left: 20rpx;
    color: #666;
    line-height: 64rpx;
}

.context-time{
    font-size: 24rpx;
    color: #999;
    margin-left: 20rpx;
    line-height: 64rpx;
}

.content-container{
    margin: 60rpx 30rpx 0 30rpx;
}

.content{
    color: #666;
    line-height: 44rpx;
    font-size: 24rpx;
}

.detail-pos{
    height: 150rpx;
}

.blog-link{
    margin: 50rpx 30rpx;
    font-size: 26rpx;
    word-break: break-all;
}

.blog-link-text{
    color: rgb(0, 144, 240);
}