/* pages/my/my.wxss */
@import "../template/blog-item/blog-item-template.wxss"
@import "../template/bloger-item/bloger-item-template.wxss"
.my{
    display: flex;
    flex-direction: column;
}

.my-info{
    display: flex;
    flex-direction: column;
}

.my-avatar{
    text-align: center;
    margin-bottom: 20rpx;
}

.my-avatar image{
    width: 148rpx;
    height: 148rpx;
    border-radius: 50%;
}

.my-box{
    text-align: center;
    margin-bottom: 20rpx;
    height: 72rpx;
    line-height: 72rpx;
}

.my-name{
    font-size: 30rpx;
    color: #666;
    margin-right: 20rpx;
}

/*字体图标*/
@font-face {
    font-family: 'iconfont';
    src: url(data:font/truetype;charset=utf-8;base64,) format('truetype');
    font-weight: normal;
    font-style: normal;
}

.iconfont {
    font-family: "iconfont" !important;
    font-size: 16px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.iconnv:before {
    content: "\e6bd";
}

.iconnan:before {
    content: "\e674";
}

.my-gender-man{
    color: rgb(0, 144, 240);
}

.my-gender-woman{
    color: rgb(255, 0, 131);
}

.my-sign{
    text-align: center;
    padding: 0 48rpx;
    padding-bottom: 24rpx;
}

.my-sign-title{
    color: rgb(238, 185, 2);
    font-size: 26rpx;
}

.my-sign-content{
    color: #333;
    font-size: 26rpx;
}

.my-class{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #eee;
    font-size: 26rpx;
    color: #333;
}

.my-class-select{
    color: #000;
    font-weight: bold;
    border-bottom: 2px solid #0090F0;
}

.my-content{
    margin-top: 48rpx;
    text-align: center;
    font-size: 32rpx;
}

.my-set{
    font-size: 28rpx;
    color: #0078ff;
    margin-left: 12rpx;
}